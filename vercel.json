{
  "version": 2,
  "builds": [
    {
      "src": "simple-api-server.cjs",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "simple-api-server.cjs"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ]
}